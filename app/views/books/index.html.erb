<h1>Books</h1>

<% @books.each do |book| %>
  <section class="grid-item" id='book-<%=book.id%>'>
    <p>Title: <%= book.title %></p>
    <p>Page count: <%= book.page_count %></p>
    <p>Publication year: <%= book.publication_year %></p>
    <p>Author: <% book.authors.each do |author| %>
      <%= link_to author.name, "/authors/#{author.id}" %></p>
      <% end %>
  </section>
<% end %>
